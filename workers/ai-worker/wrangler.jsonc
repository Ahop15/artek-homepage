/**
 * ARTEK AI Worker Configuration
 * For more details: https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "artek-ai-worker",
	"main": "src/index.ts",
	"compatibility_date": "2025-11-18",
	"workers_dev": false,
	"preview_urls": false,
	"observability": {
		"enabled": true
	},
	/**
	 * KV Namespace for rate limiting and token tracking
	 * Uses same KV as original ai-worker for shared rate limits
	 */
	"kv_namespaces": [
		{
			"binding": "AI_WORKER_KV",
			"id": "437feb9330b24fb78156e168e4294656"
		}
	],
	/**
	 * AI binding for Workers AI and AutoRAG/AI Search
	 */
	"ai": {
		"binding": "AI",
		"remote": true
	},
	/**
	 * Build configuration for markdown prompts
	 */
	"rules": [
		{
			"type": "Text",
			"globs": [
				"**/*.md"
			],
			"fallthrough": true
		}
	],
	/**
	 * D1 Database for blockchain-style conversation logging
	 *
	 * Setup commands:
	 *
	 * Create database (production):
	 *   npx wrangler d1 create artek-ai-logs
	 *
	 * Run migration (local):
	 *   npx wrangler d1 execute artek-ai-logs --local --file=migrations/0001_create_conversation_logs.sql
	 *
	 * Run migration (remote/production):
	 *   npx wrangler d1 execute artek-ai-logs --remote --file=migrations/0001_create_conversation_logs.sql
	 *
	 * Query database (local):
	 *   npx wrangler d1 execute artek-ai-logs --local --command="SELECT * FROM conversation_logs"
	 *
	 * Query database (remote):
	 *   npx wrangler d1 execute artek-ai-logs --remote --command="SELECT * FROM conversation_logs"
	 *
	 * Reset local database:
	 *   rm -rf .wrangler/state/v3/d1/
	 */
	"d1_databases": [
		{
			"binding": "AI_LOGS_DB",
			"database_name": "artek-ai-logs",
			"database_id": "6ed63801-66e2-48a2-9586-7247eeeb97f2"
		}
	]
	/**
	 * Production Secrets (set via CLI):
	 * npx wrangler secret put ANTHROPIC_API_KEY
	 * npx wrangler secret put AISEARCH_NAME
	 * npx wrangler secret put TURNSTILE_SECRET_KEY
	 */
	/**
	 * Development: Use .dev.vars file for local environment variables
	 * Required variables:
	 * - ANTHROPIC_API_KEY: Claude API key
	 * - AISEARCH_NAME: AI Search / AutoRAG index name
	 * - TURNSTILE_SECRET_KEY: Turnstile Secret Key
	 * - ENVIRONMENT: 'development'
	 */
}
